<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenu"
    android:fitsSystemWindows="true"
    tools:context=".reportesActivity">

    <Button
        android:id="@+id/RI"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:backgroundTint="@color/blue"
        android:text="RequisiscÃ³n de insumos"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginTop="115dp"
            app:srcCompat="@drawable/teamwork" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/amiko_bold"
            android:text="Residente"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="114dp"
                android:layout_height="66dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/rounded_buttom"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/house"
                android:padding="20dp"
                android:text="Menu"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="114dp"
                android:layout_height="66dp"
                android:layout_marginLeft="810dp"
                android:layout_marginTop="-65dp"
                android:background="@drawable/rounded_buttom"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/logout"
                android:padding="20dp"
                android:text="Salir"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>