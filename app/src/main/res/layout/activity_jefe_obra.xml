<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jefeObraActivity"
    android:background="@drawable/fondomenu"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="124dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teamwork" />

    <Button
        android:id="@+id/btnModificarListaInsumos"
        android:layout_width="153dp"
        android:layout_height="91dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="392dp"
        android:background="@drawable/rounded_buttom"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/reporte"
        android:padding="10dp"
        android:text="Ver lista de insumos"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnCreaListaInsumos"
        android:layout_width="153dp"
        android:layout_height="91dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="228dp"
        android:background="@drawable/rounded_buttom"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/health_check"
        android:padding="10dp"
        android:text="Crear lista de insumos"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnModificarListaInsumos" />

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/house"
            android:padding="20dp"
            android:text="Menu"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnAjustes"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/engranaje"
            android:padding="10dp"
            android:text="Ajuustes"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnLogaout"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/logout"
            android:padding="20dp"
            android:text="Salir"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Jefe de Obra"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>