<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".residenteActivity"
    android:background="@drawable/fondomenu"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-206dp"
        tools:layout_editor_absoluteY="232dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="99dp"
            android:layout_marginTop="115dp"
            app:srcCompat="@drawable/teamwork" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/amiko_bold"
            android:text="Residente"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="565dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="260dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCrearRequisicionInsumos"
                    android:layout_width="153dp"
                    android:layout_height="91dp"
                    android:background="@drawable/rounded_buttom"
                    android:backgroundTint="@color/blue"
                    android:drawableLeft="@drawable/reporte"
                    android:padding="10dp"
                    android:text="crear requisiciones de insumos"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenu"
                    android:layout_width="114dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/rounded_buttom"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/house"
                    android:padding="20dp"
                    android:text="Menu"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/btnAjustes"
                    android:layout_width="117dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/rounded_buttom"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/engranaje"
                    android:padding="10dp"
                    android:text="Ajuustes"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/btnLogaout"
                    android:layout_width="114dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/rounded_buttom"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/logout"
                    android:padding="20dp"
                    android:text="Salir"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>