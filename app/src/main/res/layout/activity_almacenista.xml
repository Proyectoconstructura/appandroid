<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:fitsSystemWindows="true"
    tools:context=".activityAlmacenista">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_margin="55.0dip"
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"

                app:srcCompat="@drawable/teamwork" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55.0dip"
                android:fontFamily="@font/amiko_bold"
                android:text="Almacenista"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/rectangle"
        android:dividerPadding="5mm"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5mm"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="-7dp">


        <Button
            android:id="@+id/btnAjustes"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableTop="@drawable/engranaje"
            android:drawablePadding="1sp"
            android:text="Ajustes"
            android:textColor="@color/white"
            android:textSize="12sp"

            app:layout_constraintEnd_toStartOf="@+id/btnLogaout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnLogaout"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableTop="@drawable/logout"
            android:drawablePadding="1sp"
            android:text="Salir"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"

            />

        <Button
            android:id="@+id/btnMenu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableTop="@drawable/house"
            android:drawablePadding="1sp"
            android:text="MenÃº"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnLogaout"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/rectangle"
        android:dividerPadding="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2mm"

        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="-12dp">

        <Button
            android:id="@+id/btnEntradaInsumos"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10.0dip"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/blue"
            android:drawableTop="@drawable/health_check"
            android:drawablePadding="1sp"
            android:text="Entrada insumos"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btnGenerarReporteInsumos"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10.0dip"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/blue"
            android:drawableTop="@drawable/prueba"
            android:drawablePadding="1sp"
            android:text="Reporte "
            android:textColor="@color/white"

            android:textSize="12sp" />

        <Button
            android:id="@+id/btnBuscarInsumo"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10.0dip"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/blue"
            android:drawableTop="@drawable/seon"
            android:drawablePadding="1sp"
            android:text="Inventario"
            android:textColor="@color/white"
            android:textSize="12sp"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>