<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jefeComprasActivity"
    android:background="@drawable/fondomenu"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="138dp"
        android:layout_height="119dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teamwork" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Jefe de Compra"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnCrearRequisicionCompras"
        android:layout_width="153dp"
        android:layout_height="91dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/rounded_buttom"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/reporte"
        android:padding="10dp"
        android:text="Procesar requisiciones de Compra"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.308" />

    <LinearLayout
        android:layout_width="439dp"
        android:layout_height="76dp"
        android:layout_marginTop="240dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearRequisicionCompras"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="114dp"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/house"
            android:padding="20dp"
            android:text="Menu"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnAjustes"
            android:layout_width="117dp"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/engranaje"
            android:padding="10dp"
            android:text="Ajuustes"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnLogaout"
            android:layout_width="114dp"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/rounded_buttom"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/logout"
            android:padding="20dp"
            android:text="Salir"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>